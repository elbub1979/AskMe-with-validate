<div class="container">
  <h2 class="title">Редактирование пользователя</h2>

  <% if @user.errors.any? %>
    <div class="mt">
      <% @user.errors.full_messages.each do |message| %>
        <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="mt">
    <%= form_with model: @user, data: { turbo: false } do |form| %>

      <%= render 'form', form: form %>

      <p class="mt-lg text-sm">Если не хотите менять пароль, оставьте эти поля пустыми</p>
      <p class="mt"><%= form.label :password, 'Пароль' %></p>
      <p><%= form.text_field :password, class: 'form-text-field' 'Имя' %></p>

      <p class="mt"><%= form.label :password_confirmation, 'Пароль' %></p>
      <p><%= form.text_field :password_confirmation, class: 'form-text-field' 'Имя' %></p>

      <p class="mt-lg">
        <%= form.submit 'Сохранить', class: 'button button-main' %>
        <span class="text-sm">или<%= link_to 'Вернутся', :back %></span>
      </p>

    <% end %>
  </div>

  <div class="mt-lg">
    <%= button_to 'Удалить пользователя', user_path(@user), method: :delete, form: {
      data: { turbo_confirm: 'Вы точно хотите удалить свой профиль?' } }, class: 'text-red text-sm' %>
  </div>
</div>